<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/background_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="CRM店家"
            android:textSize="28dp"
            android:textColor="#CCCCCC"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginRight="40dp"
            android:id="@+id/ll_customerlogin_customerlogin"
            android:orientation="vertical"
            android:layout_marginLeft="40dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_edittext"
                android:hint="请输入您的手机号"
                android:textSize="24dp"
                android:id="@+id/et_phonenum_customerlogin"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:orientation="horizontal">
                <EditText
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:hint="验证码"
                    android:textSize="24dp"
                    android:singleLine="true"
                    android:id="@+id/et_VerificationCode_customerlogin"
                    android:paddingRight="10dp"
                    android:background="@drawable/shape_edittext"/>

                <Button
                    android:layout_width="100dp"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="10dp"
                    android:id="@+id/bt_getVerificationcode_customerlogin"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_alignTop="@id/et_VerificationCode_customerlogin"
                    android:layout_alignBottom="@id/et_VerificationCode_customerlogin"
                    android:background="@drawable/shape_edittext"
                    android:text="获取验证码"/>
            </RelativeLayout>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_button"
                android:text="登陆"
                android:paddingTop="10dp"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:gravity="center"
                android:id="@+id/bt_login_customerlogin"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_below="@id/ll_customerlogin_customerlogin"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@drawable/textcolor_1"
                android:text="Back"
                android:id="@+id/tv_back_customerlogin"
                android:layout_centerInParent="true"
                android:textSize="24dp"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>

