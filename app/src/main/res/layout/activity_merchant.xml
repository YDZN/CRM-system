<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#efeff4"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#ff8419"
        android:id="@+id/rl_head_merchant">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_title_merchant"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="首 页"
            android:textColor="#ffffff"
            android:textSize="30dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回"
            android:textColor="#ffffff"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:id="@+id/tv_back_merchant"
            android:textSize="18dp"/>

    </RelativeLayout>
    <com.example.jjj.crm_system.ui.view.MyViewPager
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_head_merchant"
        android:id="@+id/vp_merchant"
        android:layout_above="@+id/rg_merchant"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"></com.example.jjj.crm_system.ui.view.MyViewPager>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@drawable/shape_tab_merchant"
        android:id="@+id/rg_merchant">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rb_mydiscount_merchant"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:button="@null"
            android:gravity="center"
            android:checked="true"
            android:paddingLeft="4dp"
            android:paddingTop="4dp"
            android:drawableTop="@drawable/selector_tab_account_merchant"
            android:text="活动"
            android:textSize="20dp"
            android:textColor="@drawable/selector_tab_text_merchant"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:id="@+id/rb_home_merchant"
            android:text="主页"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:checked="true"
            android:textColor="@drawable/selector_tab_text_merchant"
            android:textSize="20dp"
            android:drawableTop="@drawable/selector_tab_home_merchant"
            android:layout_weight="1"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:paddingBottom="4dp"
            android:layout_weight="1"
            android:paddingTop="4dp"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:id="@+id/rb_score_merchant"
            android:textColor="@drawable/selector_tab_text_merchant"
            android:textSize="20dp"
            android:drawableTop="@drawable/selector_tab_score_meichant"
            android:text="积分"/>
    </RadioGroup>
</RelativeLayout>
